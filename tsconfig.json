{
  "extends": "./node_modules/tsconfig/tsconfig.node.json",
  "exclude": ["dist"],

  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs",
    "src/**/*.json"
  ],

  "compilerOptions": {
    "types": ["vitest/globals"],

    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "$*": ["./src/*"]
    },
    "outDir": "./dist"
  }
}
